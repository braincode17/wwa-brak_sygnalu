<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/design_list_height"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/design_list_l_r_padding"
    android:paddingStart="@dimen/design_list_l_r_padding">

    <TextView
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/design_list_l_r_padding"
        android:maxLines="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/design_list_text_size" />
</LinearLayout>