<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/design_list_height"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/design_list_l_r_padding"
    android:paddingStart="@dimen/design_list_l_r_padding">

    <TextView
        android:id="@+id/todo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SMTH"
        android:textSize="@dimen/design_list_text_size" />

    <TextView
        android:id="@+id/todo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/design_list_l_r_padding"
        android:layout_marginStart="@dimen/design_list_l_r_padding"
        android:maxLines="1"
        android:text="title"
        android:textSize="@dimen/design_list_text_size" />
</LinearLayout>